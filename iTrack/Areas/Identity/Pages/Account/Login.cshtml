@page
@model LoginModel
@{
       <style>
        /* Fade-in animation */
        .fade-in {
            opacity: 0;
            animation: fadeInAnimation ease 2s;
            animation-fill-mode: forwards;
        }

        @@keyframes fadeInAnimation {
            from {
                opacity: 0;
            }
            to {
                opacity: 1;
            }
        }
    </style>

    <div class="h-100 fade-in">
        <div class="mask d-flex align-items-center h-100">
            <div class="container">
                <div class="row justify-content-center p-5">
                    <div class="col-4">
                        <div class="card shadow-2-strong" style="background-color: #f5f7fa;">
                            <div class="card-body">
                                <form id="account" method="post">
                                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                    <div class="form-floating" style="margin:10px">
                                        <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="E-mail">
                                        <label asp-for="Input.Email" class="form-label"></label>
                                    </div>
                                    <div class="form-floating" style="margin:10px">
                                        <input asp-for="Input.Password" class="form-control" autocomplete="password" aria-required="true" placeholder="Password">
                                        <label asp-for="Input.Password" class="form-label"></label>
                                    </div>
                                    <div style="margin:10px">
                                        <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary" style="background-color: #ff5733; color: white; border: none; outline: none;">Log in</button>
                                    </div>
                                    <div class="form-floating" style="margin:10px">Don't have an account? <a href="/Identity/Account/Register">Sign Up</a></div>
                                </form>



                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

}
